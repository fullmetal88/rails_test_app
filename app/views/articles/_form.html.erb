<% if @article.errors.any? %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @article do |f| %>
  <div>
    <p><%= f.label :title %></p>
    <%= f.text_field :title %>
  </div>
  <div>
    <p><%= f.label :description %></p>
    <%= f.text_area :description %>
  </div>
  <%= f.submit %>
  <%= link_to 'Back', articles_path %>
<% end %>